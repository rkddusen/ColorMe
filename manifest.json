{
  "name": "Color, me",
  "description": "Save your color combinations",
  "version": "1.0",
  "manifest_version": 3,
  "background": { "service_worker": "src/scripts/background.js" },
  "permissions": ["storage"],
  "icons": {
    "16": "src/icons/16.png",
    "48": "src/icons/48.png",
    "128": "src/icons/128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "src/icons/128.png",
    "default_title": "Color, me"
  }
}
